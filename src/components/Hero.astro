---
const { heroname, herodsc } = Astro.props;
---
<section class="flex justify-center mt-5">
    <div class="max-w-xl">
        <h1 class="font-bold text-4xl mt-4 text-center">
            {heroname}
        </h1>
        <p class="text-2xl">{herodsc}</p>
    </div>
</section>
<style>
    @media screen and (max-width: 520px) {
        section {
            text-align: center;
        }
    }
</style>